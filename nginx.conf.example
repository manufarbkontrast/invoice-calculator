# Nginx Konfiguration für Invoice Calculator
# Speichere diese Datei als: /etc/nginx/sites-available/invoice-calculator
# Aktiviere mit: ln -s /etc/nginx/sites-available/invoice-calculator /etc/nginx/sites-enabled/

# HTTP Server (wird zu HTTPS weitergeleitet nach SSL-Setup)
server {
    listen 80;
    listen [::]:80;
    server_name rechnungen.meinefirma.de;  # ÄNDERE DIESE DOMAIN!

    # Redirect to HTTPS (aktivieren nach SSL-Setup)
    # return 301 https://$server_name$request_uri;

    # Temporär: HTTP (bis SSL eingerichtet ist)
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts für große Uploads
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Body size limit für Datei-Uploads (50MB)
        client_max_body_size 50M;
    }
}

